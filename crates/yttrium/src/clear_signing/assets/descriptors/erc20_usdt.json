{
  "$schema": "https://raw.githubusercontent.com/ethereum/ERCs/master/ERC-7730/schema.json",
  "context": {
    "$id": "Tether USD",
    "contract": {
      "deployments": [
        { "chainId": 1, "address": "0xdAC17F958D2ee523a2206206994597C13D831ec7" },
        { "chainId": 10, "address": "0x94b008aA00579c1307B0EF2C499aD98a8ce58e58" },
        { "chainId": 42161, "address": "0xfd086bc7cd5c481dcc9c85ebe478a1c0b69fcbb9" },
        { "chainId": 8453, "address": "0x4b8e4fad8a8a401555aab5da8697c2b352269b33" }
      ]
    }
  },
  "metadata": {
    "token": {
      "symbol": "USDT",
      "name": "Tether USD"
    },
    "constants": {
      "maxApproval": "0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
    }
  },
  "display": {
    "formats": {
      "approve(address,uint256)": {
        "intent": "Approve USDT spending",
        "fields": [
          {
            "path": "spender",
            "label": "Spender",
            "format": "addressName"
          },
          {
            "path": "value",
            "label": "Amount",
            "format": "tokenAmount",
            "params": {
              "tokenPath": "@.to",
              "threshold": "$.metadata.constants.maxApproval",
              "message": "All"
            }
          }
        ],
        "required": ["spender", "value"]
      }
    }
  }
}
