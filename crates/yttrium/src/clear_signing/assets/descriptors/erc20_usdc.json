{
  "$schema": "https://raw.githubusercontent.com/ethereum/ERCs/master/ERC-7730/schema.json",
  "context": {
    "$id": "USD Coin",
    "contract": {
      "deployments": [
        { "chainId": 1, "address": "0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48" },
        { "chainId": 10, "address": "0x7F5c764cBc14f9669B88837CA1490cCa17C31607" },
        { "chainId": 42161, "address": "0xaf88d065e77c8cc2239327c5edb3a432268e5831" },
        { "chainId": 8453, "address": "0x833589fCD6eDb6E08f4c7C32D4f71b54bDa02913" }
      ]
    }
  },
  "metadata": {
    "token": {
      "symbol": "USDC",
      "name": "USD Coin"
    },
    "constants": {
      "maxApproval": "0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
    }
  },
  "display": {
    "formats": {
      "approve(address,uint256)": {
        "intent": "Approve USDC spending",
        "fields": [
          {
            "path": "spender",
            "label": "Spender",
            "format": "addressName"
          },
          {
            "path": "value",
            "label": "Amount",
            "format": "tokenAmount",
            "params": {
              "tokenPath": "@.to",
              "threshold": "$.metadata.constants.maxApproval",
              "message": "All"
            }
          }
        ],
        "required": ["spender", "value"]
      }
    }
  }
}
